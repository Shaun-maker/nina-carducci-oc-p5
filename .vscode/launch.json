    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Firefox against localhost - Ubuntu",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:8080",
            "tmpDir": "/home/axel/tmp",
        },
        

        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },

        {
            "name": "Launch Firefox against localhost -  Manjaro",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
        },
    ]
}